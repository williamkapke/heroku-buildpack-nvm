#!/bin/bash


indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a .versions file"

if [ ! -s $1/.versions ]; then
  echo ".versions empty. Skipping." | indent
  exit 0
fi

cd $1

export N_PREFIX=$1/.n bash

if [ -s ".versions" ]; then
  curl -L http://git.io/n-install | bash -s -- -y 5.5.0 $(cat .versions)
fi
